$blockquote ?= $type-border
$sans ?= Graphik, 'HelveticaNeue-Light','HelveticaNeue',Helvetica,Arial,sans-serif
$serif ?= "PT Serif", Georgia, Times, "Times New Roman", serif
$mono ?= PragmataPro, Menlo, Monaco, "Andale Mono", "Lucida Console", "Courier New", monospace
$heading-font-family ?= PublicoHeadline, "Helvetica Neue", Helvetica, Arial, sans-serif
$header-title-font-family ?= PublicoText, "Helvetica Neue", Helvetica, Arial, sans-serif
$nav-font-family ?= $heading-font-family

$h2 ?= 1.5em
$h3 ?= 1.3em
$h4 ?= 1em
$h5 ?= 0.9em
$h6 ?= 0.8em

// Fonts
.heading {
  font-family: $heading-font-family;
}
.sans { font-family: $sans; }
.serif { font-family: $serif; }
.mono
  font-family: $mono
  font-size: 85%

body > header h1 {
  font-size: 55px !important;
  font-family: $header-title-font-family;
  font-weight: bold;
  line-height: 0.85em;
}

body {
  font-size: 1em;
  line-height: 1.5em;
  color: $text-color;
  @extend .sans;
}
h1 {
  font-size: 1.8em;
  line-height: 1.2em;
}
h3 {
  line-height: 1.8;
}

@media $query-screen-medium {
  h1 { font-size: 2.2em; line-height: 1.2em; }
}

h1, h2, h3, h4, h5, h6 {
  @extend .heading;
  text-rendering: optimizelegibility;
  font-weight: 600;
  color: $header-color;
  a:hover { color: $header-link-color !important; }
}
h2, section h1 {
  font-size: 1.5em;
}
h3, section h2, section section h1 {
  font-size: 1.3em;
}
h4, section h3, section section h2, section section section h1 {
  font-size: 1em;
}
h5, section h4, section section h3 {
  font-size: .9em;
}
h6, section h5, section section h4, section section section h3 {
  font-size: .8em;
}
p, blockquote, ul, ol, pre, code
  margin-bottom: 1.5em

ul { list-style-type: circle;
  ul { list-style-type: disc; margin-bottom: 0px;
    ul { list-style-type: square; margin-bottom: 0px; }
  }
}

ol { list-style-type: decimal;
  ol { list-style-type: lower-alpha; margin-bottom: 0px;
    ol { list-style-type: lower-roman; margin-bottom: 0px; }
  }
}

ul, ol { &, ul, ol { margin-left: 1.3em; }}

ul.unstyled, ol.unstyled
  margin-left 0
  list-style-type none


strong { font-weight: bold; }

em { font-style: italic; }

mark {
  color: darken($text-color-light, 15);
  background-color: transparent;
  font-weight: normal;
  font-style: italic;
  font-family: $serif;
}
sup, sub
  font-size 0.6em
  display inline
  padding 0 1px
sup
  vertical-align super
sub { bottom: -.5em; }

q { font-style: italic;
  &:before { content: "\201C"; }
  &:after { content: "\201D"; }
}

em, dfn { font-style: italic; }

strong, dfn { font-weight: bold; }

del, s { text-decoration: line-through; }

abbr, acronym { border-bottom: 1px dotted; cursor: help; }

pre, code, tt
  @extend .mono

pre > code
  line-height 1.5

hr { margin-bottom: 0.2em; }

small { font-size: .8em; }

big { font-size: 1.2em; }

blockquote {
  $bq-margin = 1.2em;
  font-style: italic;
  position: relative;
  font-size: 1.2em;
  font-weight: lighter;
  line-height: 1.5em;
  padding-left: 1em;
  cite {
    display: block;
    font-style: italic;
    font-size: 80%;
    line-height: 1.2;
    padding-right: 30%;
    text-align: right;
    a {
      color: $text-color-light !important;
      word-wrap: break-word;
    }
  }
  @media $query-screen-wide {
    padding-left: 1.5em;
    border-left-width: 4px;
  }
}

.pullquote-right:before,
.pullquote-left:before {
  /* Reset metrics. */
  padding: 0;
  border: none;

  /* Content */
  content: attr(data-pullquote);

  /* Pull out to the right, modular scale based margins. */
  float: right;
  width: 45%;
  margin: .5em 0 1em 1.5em;

  /* Baseline correction */
  position: relative;
  top: 7px;
  font-size: 1.4em;
  line-height: 1.45em;
}

.pullquote-left:before {
  /* Make left pullquotes align properly. */
  float: left;
  margin: .5em 1.5em 1em 0;
}

/* @extend this to force long lines of continuous text to wrap */
.force-wrap {
  white-space: -moz-pre-wrap;
  white-space: -pre-wrap;
  white-space: -o-pre-wrap;
  white-space: pre-wrap;
  word-wrap: break-word;
}

h1.status-code {
  font-size: 12em;
}
